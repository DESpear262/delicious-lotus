# AWS Configuration
aws_region  = "us-east-2"  # CRITICAL: Must be us-east-2
environment = "dev"

# S3 Configuration
# IMPORTANT: Bucket name must be globally unique!
# Replace 'yourcompany' with your organization name or unique identifier
s3_bucket_name = "ai-video-yourcompany-dev-us-east-2"

# Database Configuration
db_identifier       = "ai-video-db"
db_name             = "ai_video_pipeline"
db_username         = "ai_video_admin"
db_password         = "CHANGE_ME_TO_SECURE_PASSWORD"  # Use a strong password!
db_instance_class   = "db.t4g.micro"
db_allocated_storage = 20

# Redis Configuration
redis_cluster_id   = "ai-video-redis"
redis_node_type    = "cache.t4g.micro"
redis_num_nodes    = 1

# ECS Configuration
ecs_cluster_name    = "ai-video-cluster"
ecs_service_name    = "ai-video-backend-service"
ecs_task_family     = "ai-video-backend"
container_image_tag = "latest"
task_cpu            = "1024"  # 1 vCPU
task_memory         = "2048"  # 2 GB
desired_count       = 1

# ECR Configuration
ecr_repository_name = "ai-video-backend"

# Application Configuration
cors_origins         = "http://localhost:3000,http://localhost:5173"
replicate_api_token  = "your_replicate_token_here"  # Get from https://replicate.com/account/api-tokens
