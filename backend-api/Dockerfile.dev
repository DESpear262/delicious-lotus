# Development Dockerfile with hot-reload and dev tools

FROM python:3.13-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    FFMPEG_VERSION=7.1 \
    PATH="/usr/local/bin:${PATH}"

WORKDIR /app

# Install system dependencies and FFmpeg (full build with libfreetype for drawtext filter)
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    curl \
    ca-certificates \
    git \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Verify FFmpeg installation
RUN ffmpeg -version && ffprobe -version

# Install Python dependencies
COPY pyproject.toml ./
# Create empty src directory for package structure
RUN mkdir -p src/app
# Install in editable mode so mounted src/ takes precedence
# hadolint ignore=DL3013
RUN pip install --upgrade pip setuptools wheel \
    && pip install -e ".[dev]"

# Create temporary directory for FFmpeg processing
RUN mkdir -p /tmp/ffmpeg && chmod 777 /tmp/ffmpeg

# Expose port
EXPOSE 8000

# Run with hot-reload for development
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
