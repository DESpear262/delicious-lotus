# ===================================
# AI Video Generation Pipeline - AI Services
# Environment Configuration Template
# ===================================
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env in your AI services project root
# 2. Replace all placeholder values with actual API keys
# 3. Review all settings and adjust as needed for your environment
# 4. NEVER commit files with real credentials to git
#
# This template is optimized for AI service components
# (OpenAI, Replicate, and related AI processing services)
#
# PRODUCTION AWS CONFIGURATION (DevOps Team):
# - AWS Region: us-east-2 (CRITICAL: Must be us-east-2)
# - S3 Bucket: ai-video-gauntlet-gds-us-east-2
# - Database: ai-video-db (RDS PostgreSQL - ai_video_pipeline)
# - Redis: ai-video-redis (ElastiCache cluster)
# - ECS: ai-video-cluster / ai-video-backend-service
# - ECR: ai-video-backend repository
#
# ===================================

# -----------------------------------
# AI Services Configuration (OpenAI)
# -----------------------------------
# REQUIRED: OpenAI API for prompt analysis and editing
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=CHANGE_ME_your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT_SECONDS=30

# -----------------------------------
# AI Services Configuration (Replicate)
# -----------------------------------
# REQUIRED: Replicate API for video generation models
# Get from: https://replicate.com/account/api-tokens
# Format: r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

REPLICATE_API_TOKEN=CHANGE_ME_your_replicate_api_token_here

# Replicate Model Configuration
REPLICATE_DEFAULT_MODEL=google/veo-3.1-fast
REPLICATE_IMAGE_MODEL=stability-ai/sdxl:latest
REPLICATE_TIMEOUT_SECONDS=300
REPLICATE_MAX_RETRIES=3
REPLICATE_RETRY_DELAY_SECONDS=5

# Model Quality Settings
REPLICATE_USE_CHEAP_MODELS=true
REPLICATE_MODEL_QUALITY_TIER=standard

# -----------------------------------
# AI Service Behavior
# -----------------------------------
# Enable mock responses for testing (set to false in production)
USE_MOCK_RESPONSES=false

# Enable verbose logging for AI service calls
AI_DEBUG_LOGGING=true

# Maximum concurrent AI requests
MAX_CONCURRENT_AI_REQUESTS=5

# AI request timeout (seconds)
AI_REQUEST_TIMEOUT=120

# -----------------------------------
# AWS Configuration
# -----------------------------------
# AWS Region (CRITICAL: Must be us-east-2 per DevOps team)
AWS_REGION=us-east-2
AWS_DEFAULT_REGION=us-east-2

# -----------------------------------
# Caching Configuration
# -----------------------------------
# Enable AI response caching to reduce API costs
ENABLE_AI_CACHE=true

# Cache TTL for AI responses (seconds)
AI_CACHE_TTL_SECONDS=3600

# Similarity threshold for prompt reuse (0.0-1.0)
PROMPT_SIMILARITY_THRESHOLD=0.85

# -----------------------------------
# Cost Control
# -----------------------------------
# Daily API call limits (0 = unlimited)
OPENAI_DAILY_LIMIT=1000
REPLICATE_DAILY_LIMIT=100

# Cost alerting thresholds
OPENAI_COST_ALERT_USD=50
REPLICATE_COST_ALERT_USD=100

# -----------------------------------
# Video Generation Settings
# -----------------------------------
# Default video generation parameters
DEFAULT_VIDEO_DURATION_SECONDS=5
DEFAULT_VIDEO_WIDTH=1280
DEFAULT_VIDEO_HEIGHT=720
DEFAULT_VIDEO_ASPECT_RATIO=16:9

# Quality tiers
VIDEO_QUALITY_TIERS=standard,premium,ultra

# -----------------------------------
# Brand Analysis Settings
# -----------------------------------
# Maximum brand analysis tokens
BRAND_ANALYSIS_MAX_TOKENS=1000

# Brand confidence threshold (0.0-1.0)
BRAND_CONFIDENCE_THRESHOLD=0.7

# -----------------------------------
# Scene Decomposition Settings
# -----------------------------------
# Maximum scenes per video
MAX_SCENES_PER_VIDEO=10

# Minimum scene duration (seconds)
MIN_SCENE_DURATION=2

# -----------------------------------
# Style Vector Settings
# -----------------------------------
# Style vector dimensions
STYLE_VECTOR_DIMENSIONS=512

# Style similarity threshold (0.0-1.0)
STYLE_SIMILARITY_THRESHOLD=0.8

# -----------------------------------
# Edit Intent Classification
# -----------------------------------
# Edit intent confidence threshold (0.0-1.0)
EDIT_INTENT_CONFIDENCE_THRESHOLD=0.75

# Supported edit operations
SUPPORTED_EDIT_OPERATIONS=cut,trim,split,merge,reorder,speed_change

# -----------------------------------
# Testing Configuration
# -----------------------------------
# Mock API responses during testing
MOCK_OPENAI_API=false
MOCK_REPLICATE_API=false

# Test mode timeout multiplier
TEST_TIMEOUT_MULTIPLIER=2.0

# -----------------------------------
# Logging Configuration
# -----------------------------------
# AI service log level
AI_LOG_LEVEL=info

# Enable detailed AI request/response logging
AI_DETAILED_LOGGING=true

# Log AI API costs
LOG_AI_COSTS=true

# -----------------------------------
# Performance Monitoring
# -----------------------------------
# Enable AI service metrics
ENABLE_AI_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL_SECONDS=60

# Performance alerting thresholds
SLOW_REQUEST_THRESHOLD_MS=5000
ERROR_RATE_THRESHOLD=0.05
