{
  "family": "db-init-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::971422717446:role/dev-ecs-task-execution-role",
  "containerDefinitions": [
    {
      "name": "postgres-client",
      "image": "postgres:16-alpine",
      "essential": true,
      "command": [
        "sh",
        "-c",
        "echo 'Starting database initialization...' && psql \"$DATABASE_URL\" -c 'SELECT version();' && echo 'Database connection successful' && echo \"$INIT_SQL\" | base64 -d | psql \"$DATABASE_URL\" && echo 'Database schema initialized successfully!' || (echo 'ERROR: Database initialization failed' && exit 1)"
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://ai_video_admin:madcatrakshasa@ai-video-db.c1uuigcm4bd1.us-east-2.rds.amazonaws.com:5432/ai_video_pipeline"
        },
        {
          "name": "INIT_SQL",
          "value": "BASE64_PLACEHOLDER"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dev/db-init",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "db-init"
        }
      }
    }
  ]
}
